<h2><%= title "Nowy Użytkownik" %></h2>
<% semantic_form_for @user do |f| %>
<%= f.error_messages %>
	<% f.inputs do %>
		<%= f.input :email %>
		<%= f.input :password %>
		<%= f.input :password_confirmation %>
		<%= f.input :type_id, :as => :radio, :collection => [["Pracownik", 0], ["Pracodawca", 1]] %>
		<%= f.input :terms_of_service, :as => :boolean %>
	<% end %>
	
  <p><%= f.submit "Rejestruj się!" %></p>
<% end %>

<%= facebook_connect(:text => "Użyj konta Facebooku", :controller => 'user_sessions') %>

